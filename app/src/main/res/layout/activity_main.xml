        android:textAlignment="center"
        android:id="@+id/vftma"
        android:layout_below="@+id/vftpercentlabel"
        android:layout_alignStart="@+id/vftpercentlabel"
        android:layout_alignEnd="@+id/vftpercentlabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textAlignment="center"
        android:id="@+id/vftp"
        android:layout_below="@+id/vftma"
        android:layout_alignStart="@+id/vftma"
        android:layout_alignEnd="@+id/vftma" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fouls_label"
        android:id="@+id/vfoulslabel"
        android:textColor="#000000"
        android:layout_alignTop="@+id/foulslabel"
