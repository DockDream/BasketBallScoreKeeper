    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/hfouls"
        android:layout_below="@+id/foulslabel"
        android:layout_alignStart="@+id/foulslabel"
        android:layout_alignEnd="@+id/foulslabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fg_percentage"
        android:id="@+id/vfgpercentlabel"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/hftpercentlabel"
        android:layout_alignStart="@+id/away" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textAlignment="center"
        android:id="@+id/vfgma"
        android:layout_below="@+id/vfgpercentlabel"
        android:layout_alignStart="@+id/vs"
        android:layout_toStartOf="@+id/vdrlabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textAlignment="center"
        android:id="@+id/vfgp"
        android:layout_below="@+id/vfgma"
        android:layout_alignStart="@+id/vfgma"
        android:layout_toStartOf="@+id/vdrlabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/three_percentage"
        android:id="@+id/vthreepercentlabel"
        android:textColor="#000000"
        android:layout_above="@+id/vfgma"
        android:layout_alignStart="@+id/valabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textAlignment="center"
        android:id="@+id/vthreema"
        android:layout_below="@+id/vthreepercentlabel"
        android:layout_alignStart="@+id/vthreepercentlabel"
        android:layout_alignEnd="@+id/vthreepercentlabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textAlignment="center"
        android:id="@+id/vthreep"
        android:layout_below="@+id/vthreema"
        android:layout_alignStart="@+id/vthreema"
        android:layout_alignEnd="@+id/vthreema" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
