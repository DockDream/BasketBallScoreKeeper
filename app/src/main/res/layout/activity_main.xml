        android:layout_alignTop="@+id/vslabel"
        android:layout_alignStart="@+id/vdr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/va"
        android:layout_below="@+id/valabel"
        android:layout_alignStart="@+id/valabel"
        android:layout_toStartOf="@+id/vblabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turnover_label"
        android:id="@+id/vtlabel"
        android:textColor="#000000"
        android:layout_alignTop="@+id/valabel"
        android:layout_alignStart="@+id/vb"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/vt"
        android:layout_below="@+id/vtlabel"
        android:layout_alignStart="@+id/vtlabel"
        android:layout_alignEnd="@+id/vb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fg_percentage"
        android:id="@+id/hfgpercentlabel"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/home"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textAlignment="center"
        android:id="@+id/hfgma"
        android:layout_below="@+id/hfgpercentlabel"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/hdrlabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/three_percentage"
        android:id="@+id/hthreepercentlabel"
        android:textColor="#000000"
        android:layout_alignTop="@+id/hfgpercentlabel"
        android:layout_alignStart="@+id/ha" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textAlignment="center"
        android:id="@+id/hfgp"
        android:layout_below="@+id/hfgma"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/hfgma" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textAlignment="center"
        android:id="@+id/hthreema"
        android:layout_below="@+id/hthreepercentlabel"
        android:layout_alignStart="@+id/hthreepercentlabel"
        android:layout_alignEnd="@+id/hthreepercentlabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textAlignment="center"
        android:id="@+id/hthreep"
        android:layout_below="@+id/hthreema"
        android:layout_alignStart="@+id/hthreema"
        android:layout_alignEnd="@+id/hthreema" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ft_percentage"
        android:id="@+id/hftpercentlabel"
        android:textColor="#000000"
        android:layout_alignTop="@+id/hthreepercentlabel"
        android:layout_alignStart="@+id/ht" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
