    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/vfouls"
        android:layout_below="@+id/vfoulslabel"
        android:layout_alignStart="@+id/vfoulslabel"
        android:layout_alignEnd="@+id/vfoulslabel" />

</RelativeLayout>
