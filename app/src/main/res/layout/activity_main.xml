<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    android:background="@drawable/court"
    tools:context="com.dockdream.basketballscorekeeper.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <Button
            android:text="FG"
            android:id="@+id/fgmade"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:onClick="buttonPushed" />

        <Button
            android:text="FGA"
            android:id="@+id/fgattempt"
            android:layout_row="1"
            android:layout_column="0"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:onClick="buttonPushed" />

        <Button
            android:text="3PT"
            android:id="@+id/threeptmade"
            android:layout_row="0"
            android:layout_column="1"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:onClick="buttonPushed" />

        <Button
            android:text="FT"
            android:id="@+id/ftmade"
            android:layout_row="0"
            android:layout_column="2"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:onClick="buttonPushed" />

        <Button
            android:text="OREB"
            android:id="@+id/oreb"
            android:layout_row="2"
            android:layout_column="0"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:onClick="buttonPushed" />

        <Button
            android:text="3PTA"
            android:id="@+id/threeattempt"
            android:layout_row="1"
            android:layout_column="1"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:onClick="buttonPushed" />

        <Button
            android:text="FTA"
            android:id="@+id/ftattempt"
            android:layout_row="1"
            android:layout_column="2"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:onClick="buttonPushed" />

        <Button
            android:text="STL"
            android:id="@+id/steal"
            android:layout_row="3"
            android:layout_column="0"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:onClick="buttonPushed" />

        <Button
            android:text="DREB"
            android:id="@+id/dreb"
            android:layout_row="2"
            android:layout_column="1"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:onClick="buttonPushed" />

        <Button
            android:text="BLK"
            android:id="@+id/block"
            android:layout_row="2"
            android:layout_column="2"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:onClick="buttonPushed" />

        <Button
            android:text="Foul"
            android:id="@+id/foul"
            android:layout_row="4"
            android:layout_column="0"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:onClick="buttonPushed" />

        <Button
            android:text="AST"
            android:id="@+id/assist"
            android:layout_row="3"
            android:layout_column="1"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:onClick="buttonPushed" />

        <Button
            android:text="TRNOV"
            android:id="@+id/turnover"
            android:layout_row="3"
            android:layout_column="2"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:onClick="buttonPushed" />

        <Button
            android:text="- stat"
            android:id="@+id/minusstat"
            android:layout_row="4"
            android:layout_column="1"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:onClick="buttonPushed" />

        <Button
            android:text="Enter"
            android:id="@+id/enter"
            android:layout_row="4"
            android:layout_column="2"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:onClick="enterStats" />
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/score"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout"
        android:textColor="#f10a0a"
        android:background="#000000"
        android:gravity="center"
        android:textSize="40dp"
        android:elegantTextHeight="false"
        android:singleLine="false"
        android:text="0 - 0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:id="@+id/home"
        android:clickable="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/away"
        android:layout_toStartOf="@+id/gridLayout"
        android:nestedScrollingEnabled="false"
        android:onClick="homePushed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AWAY"
        android:id="@+id/away"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/gridLayout"
        android:onClick="awayPushed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oreb_label"
        android:id="@+id/horlabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/hor"
        android:layout_below="@+id/horlabel"
        android:layout_alignEnd="@+id/horlabel"
        android:layout_alignStart="@+id/horlabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dreb_label"
        android:id="@+id/hdrlabel"
        android:layout_alignBottom="@+id/horlabel"
        android:layout_toEndOf="@+id/horlabel"
