    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blocks_label"
        android:id="@+id/hblabel"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/hdrlabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/hb"
        android:layout_alignTop="@+id/hdr"
        android:layout_alignStart="@+id/hblabel"
        android:layout_alignEnd="@+id/hblabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/steals_label"
        android:id="@+id/hslabel"
        android:textColor="#000000"
        android:layout_below="@+id/hor"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/hs"
        android:layout_below="@+id/hslabel"
        android:layout_alignStart="@+id/hslabel"
        android:layout_toStartOf="@+id/hdrlabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/assist_label"
        android:id="@+id/halabel"
        android:textColor="#000000"
        android:layout_alignTop="@+id/hslabel"
        android:layout_alignStart="@+id/hdr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/ha"
        android:layout_below="@+id/halabel"
        android:layout_alignStart="@+id/halabel"
        android:layout_toStartOf="@+id/hblabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turnover_label"
        android:id="@+id/htlabel"
        android:textColor="#000000"
        android:layout_alignTop="@+id/halabel"
        android:layout_alignStart="@+id/hb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/ht"
        android:layout_below="@+id/htlabel"
        android:layout_alignStart="@+id/htlabel"
        android:layout_alignEnd="@+id/hb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oreb_label"
        android:id="@+id/vorlabel"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/score" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/vor"
        android:layout_below="@+id/vorlabel"
        android:layout_alignEnd="@+id/vorlabel"
        android:layout_alignStart="@+id/vorlabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dreb_label"
        android:id="@+id/vdrlabel"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/vor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/vdr"
        android:layout_below="@+id/vdrlabel"
        android:layout_alignStart="@+id/vdrlabel"
        android:layout_alignEnd="@+id/vdrlabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blocks_label"
        android:id="@+id/vblabel"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/vdrlabel" />

    <TextView
        android:layout_width="wrap_content"
