<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_instructions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/textbg"
    tools:context="com.dockdream.basketballscorekeeper.Instructions">

    <View
        android:id="@+id/anchor_instructions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>


    <Button
        android:text="@string/fg"
        android:id="@+id/sample_button3"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/anchor_instructions"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/instruction_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/sample_button3"
        android:layout_marginBottom="5dp"
        android:text="When a button has been pressed, it will turn yellow.\nIt will remain yellow until it is pressed again or ENTER is pressed."
        />

    <Button
        android:text="Home"
        android:id="@+id/sample_button1"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/instruction_two"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@id/anchor_instructions"
        android:layout_marginEnd="30dp"
        android:textSize="10sp" />

    <Button
        android:text="@string/fg"
        android:id="@+id/sample_button2"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/instruction_two"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/anchor_instructions"
        android:layout_marginStart="30dp"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/instruction_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/sample_button1"
        android:layout_marginBottom="5dp"
        android:text="To enter a stat, select the team and the stat or stats to be entered by pressing their button."
        />

    <TextView
        android:id="@+id/instruction_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/anchor_instructions"
        android:layout_marginTop="5dp"
        android:text="Pressing ENTER will record the selected stat(s). Each corresponding stat display will flash briefly when updating.\n\n
NOTE: Selecting FG, 3PT and FT made buttons will automatically update the corresponding Attempt stats; you do not need to select the attempt.\n\n
To remove a recorded stat, select the team and stat along with the -STAT button and press enter."
        />

</RelativeLayout>
